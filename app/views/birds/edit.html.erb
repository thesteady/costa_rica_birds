<%= form_for @bird, url: bird_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_remote_url %>

  <%= f.label :photo_credit %>
  <%= f.text_field :attribution %>

  <%= f.label :number_of_locations %>
  <%= f.number_field :number_of_locations, in: 1..20, step: 1 %>

  <%= f.label :priority %>

  <%= f.label :priority_yes, "Yes" %>
  <%= f.radio_button :priority, true %>
  <%= f.label :priority_no, "No" %>
  <%= f.radio_button :priority, false, {checked: true} %>

  <br>
  <%= f.submit %>
<% end %>
